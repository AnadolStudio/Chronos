<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/settings_category_name_hint"
        android:textAppearance="@style/Serif"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/color_container"
        tools:ignore="SpUsage" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_rectangle_16"
        android:backgroundTint="@color/background_recycler_settings"
        app:layout_constraintTop_toBottomOf="@id/subcategory_title">

        <TextView
            android:id="@+id/recycler_empty_title"
            style="@style/Serif.Gray.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_empty"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subcategory_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            tools:itemCount="6"
            tools:listitem="@layout/layout_settings_subcategory_item"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/color_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_pager">

        <TextView
            style="@style/Serif.Black.16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_color_title" />

        <com.anadolstudio.chronos.view.settings.SettingsColorButtonView
            android:id="@+id/color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/subcategory_title"
        style="@style/Serif.Black.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/settings_subcategory_title"
        app:layout_constraintStart_toStartOf="@id/name_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_text" />

    <com.anadolstudio.core.view.toolbar.ToolbarIconButton
        android:id="@+id/add_subcategory_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/subcategory_title"
        app:layout_constraintBottom_toBottomOf="@id/subcategory_title"
        app:src="@drawable/ic_add" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <com.anadolstudio.chronos.view.common.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
