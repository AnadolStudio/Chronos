<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/timeText"
        style="@style/Caption14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@id/progress"
        app:layout_constraintStart_toStartOf="@id/progress"
        app:layout_constraintBottom_toBottomOf="@id/progress"
        app:layout_constraintTop_toTopOf="@id/progress"
        android:layout_marginEnd="@dimen/padding_medium"
        tools:text="56,4 / 72" />

    <LinearLayout
        android:id="@+id/toDateContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:background="@drawable/item_ripple_rectangle_8">

        <TextView
            android:id="@+id/toDateText"
            style="@style/Caption14"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_marginHorizontal="@dimen/padding_main"
            tools:text="по 02.01.2023" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fromDateContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:background="@drawable/item_ripple_rectangle_8">

        <TextView
            android:id="@+id/fromDateText"
            style="@style/Caption14"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_marginHorizontal="@dimen/padding_main"
            tools:text="с 31.12.2022" />

    </LinearLayout>

    <com.anadolstudio.chronos.view.diagram.CircleProgressView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fromDateContainer" />

</merge>
