<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/colorView"
            android:layout_width="@dimen/padding_medium"
            android:layout_height="match_parent"
            tools:background="@color/bodyColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp">

            <LinearLayout
                android:id="@+id/parents_stub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/Category"
                    android:text="@string/symbol_multi_dot"/>

                <TextView
                    style="@style/Category"
                    android:text="@string/symbol_arrow"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/parent"
                    style="@style/Category"
                    tools:text="Родительская Категория"/>

                <TextView
                    android:id="@+id/parent_arrow"
                    style="@style/Category"
                    android:text="@string/symbol_arrow"/>

            </LinearLayout>

            <TextView
                android:id="@+id/nameText"
                style="@style/Category"
                tools:text="Категория"/>

        </LinearLayout>

    </LinearLayout>

</merge>
