<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="color" format="color|reference"/>
    <attr name="title" format="string|reference" />
    <attr name="text" format="string|reference" />

    <declare-styleable name="DayTaskItemView">
        <attr name="title" />
        <attr name="time" format="string" />
        <attr name="color" />
    </declare-styleable>

    <declare-styleable name="BaseButton">
        <attr name="text" />
        <attr name="color" />
    </declare-styleable>

    <declare-styleable name="FeatureButton">
        <attr name="src" />
        <attr name="innerPadding" format="dimension" />
        <attr name="text" />
        <attr name="state" format="enum" >
            <enum name="image" value="0"/>
            <enum name="text" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="InputView">
        <attr name="hint" />
        <attr name="src" />
        <attr name="imeOptions"/>
        <attr name="inputType" />
        <attr name="digits" />
        <attr name="maxLength" />
    </declare-styleable>

</resources>
